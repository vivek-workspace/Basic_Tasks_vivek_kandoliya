<!DOCTYPE html>
<html lang="en">



<head>
    <%- include('../partials/head') %>
</head>



<body>

    <header>
        <%- include('../partials/header') %>

    </header>
    <main>
        <form action="/tasks/student_registration_file/form" method="post" onsubmit="return validateForm()">

            <div>
                <label for="first_name">First Name</label>
                <input type="text" name="first_name">
            </div>
            <div>
                <label for="last_name">Last Name</label>
                <input type="text" name="last_name">
            </div>
            <div>
                <label for="age">Age</label>
                <input type="text" name="age" id="age">
            </div>
            <div>
                <label for="number">Number</label>
                <input type="text" name="number" id="number">
            </div>
            <div>
                <label for="email">Email</label>
                <input type="text" name="email" id="email">
            </div>
            <div>
                <label for="gender">Gender</label>
                <label for="male">Male</label>
                <input type="radio" name="gender" id="male" value="male">
                <label for="female">Female</label>
                <input type="radio" name="gender" id="female" value="female">
            </div>
            <div>
                <label for="hobbies">Hobbies</label>
                <label for="sports">Sports</label>
                <input type="checkbox" name="hobbies" id="sports" value="sports">
                <label for="reading">Reading</label>
                <input type="checkbox" name="hobbies" id="reading" value="reading">
                <label for="music">Music</label>
                <input type="checkbox" name="hobbies" id="music" value="music">
            </div>
            <div>
                <label for="address">Address</label>
                <textarea name="address" id="address" cols="30" rows="5"></textarea>
            </div>
            <div><input type="submit" value="submit" id='submit'></div>

        </form>
    </main>
    <footer>
        <%- include('../partials/footer') %>
    </footer>

    <script>

        function validateForm() {

            let flag = true;
            
            let inputs = document.getElementsByTagName('input');
            for(let i=0; i<inputs.length; i++){
                if(inputs[i].value == ""){
                    alert("Please Input value in "+inputs[i].name);
                    flag= false;
                    return false;
                }
            }
            let radio = document.getElementsByName('gender');
            let radio_check = false;
            for(let i=0; i<radio.length; i++){
                if(radio[i].checked){
                    radio_check = true;
                    break;
                }
            }
            if(!radio_check){
                alert("Please check your Gender ");
                return false;
            }

            let check = document.getElementsByName('hobbies');
            let check_box = false;
            for(let i=0; i<check.length; i++){
                if(check[i].checked){
                    check_box = true;
                    break;
                }
            }
            if(!check_box){
                alert("Please Check atleast one Hobby ");
                return false;
            }

            let textarea = document.getElementsByTagName('textarea');
            if(textarea[0].value == ""){
                alert("Please enter Adderess");
                return false;
            }
            
        }

    </script>
</body>

</html>